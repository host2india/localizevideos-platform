{
  "compilerOptions": {
    /* =========================
       BUILD TARGET
    ========================= */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    /* =========================
       PROJECT STRUCTURE
    ========================= */
    "rootDir": "src",
    "outDir": "dist",

    /* =========================
       NODE + ENV SUPPORT
    ========================= */
    "types": ["node"],
    "lib": ["ES2022"],

    /* =========================
       STRICTNESS
    ========================= */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* =========================
       INTEROP & ESM
    ========================= */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* =========================
       QUALITY OF LIFE
    ========================= */
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": false,

    /* =========================
       IMPORTANT FIXES
    ========================= */
    "verbatimModuleSyntax": false,
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
